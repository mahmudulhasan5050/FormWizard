@page
@model FormWizard.Pages.Questions.IndexModel
@{
}
<div class="container p-3">
<div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">@(ViewData["FormName"])</h2>
    </div>
    <div class="col-6">
            <a asp-page="Create" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>&nbsp;
            Create Question
        </a>
    </div>
</div>
<br />
<br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Question
            </th>
            <th>
               type
            </th>
            <th>
                Form Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.questions)
        {
            <tr>
                <td width="30%">
                    @obj.QuestionText
                </td>
                <td width="10%">
                    @obj.Type
                </td>
                    <td width="20%">
                        @obj.MyForm.Name
                    </td>
                    <td width="40%">
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="Edit" asp-route-questionid="@obj.Id" class="btn btn-primary" mx-2>
                            <i class="bi bi-pencil-square"></i>
                            Edit
                        </a>
                            <a asp-page="Delete" asp-route-questionid="@obj.Id" class="btn btn-danger" mx-2>
                            <i class="bi bi-trash-fill"></i>
                            Delete
                        </a>
                        @if(obj.Type == FormWizard.Model.Question.QuestionType.radio){
                                <a asp-page="/QuestionOptions/Index" asp-route-questionid="@obj.Id" asp-route-questiontype="@obj.Type" class="btn btn-primary" mx-2>
                                    <i class="bi bi-pencil-square"></i>
                                    Options
                                </a>
                            }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>