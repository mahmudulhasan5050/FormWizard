@page
@using FormWizard.Model;
@model FormWizard.Pages.QuestionConditions.CreateModel
@{
}

<div class="container-fluid p-0">
    <br />
    <br />
    <h3 class="h3 d-inline align-middle">New Question Condition</h3>
    <br />
    <br />
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="border p-3 mt-4">
                            <div class="mb-3">
                                <label asp-for="questionCondition.QuestionText"></label>
                                <input asp-for="questionCondition.QuestionText" class="form-control" class="form-control" />
                                <span asp-validation-for="questionCondition.QuestionText" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="questionCondition.QuestionDescription"></label>
                                <input asp-for="questionCondition.QuestionDescription" class="form-control" class="form-control" />
                                <span asp-validation-for="questionCondition.QuestionDescription" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="questionCondition.Type"></label>
                                <select asp-for="questionCondition.Type" asp-items="Html.GetEnumSelectList<QuestionCondition.QuestionType>()" class="form-control">
                                    <option disabled selected>--- Select Item ---</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label asp-for="questionCondition.Value"></label>
                                <select asp-for="questionCondition.Value" asp-items="@Model.optionList">
                                    <option disabled selected>--- Select Item ---</option>
                                </select>
                            </div>
                            <div class="mb-3">
                                <input asp-for="questionCondition.IsRequired" class="form-check-input" />
                                <label asp-for="questionCondition.IsRequired"></label>
                                <span asp-validation-for="questionCondition.IsRequired" class="text-danger"></span>
                            </div>                   
                                <input asp-for="questionCondition.QuestionId" value="@Model.questionId" hidden />             
                            <div class="row justify-content-end">

                                <div class="col-md-auto">
                                    <a asp-page="Index" asp-route-question="@Model.questionId" asp-route-myformid="@Model.myFormId" class="btn btn-light bg-white btn-sm">Back</a>
                                    &nbsp
                                    <button type="submit" class="btn btn-primary btn-sm">Add</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>