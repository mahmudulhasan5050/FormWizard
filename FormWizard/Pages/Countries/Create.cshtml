@page
@model FormWizard.Pages.Countries.CreateModel
@{
}


<div class="container-xxl py-5">
    <form method="post" enctype="multipart/form-data">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Create Country</h2>
                <hr />
            </div>

            <div class="mb-3">
                <label asp-for="country.Name"></label>
                <input asp-for="@Model.country.Name" type="text" class="form-control" />
                <span asp-validation-for="country.Name" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="country.FlagImage"></label>
                <input type="file" id="uploadBox" name="file" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

        </div>

    </form>
</div>