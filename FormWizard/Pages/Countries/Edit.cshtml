@page
@model FormWizard.Pages.Countries.EditModel
@{
}


<div class="container-fluid p-0">
	<br/>
	<br/>
	<h3 class="h3 d-inline align-middle">Edit Country</h3>
	<br/>
	<br/>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <input hidden asp-for="country.Id" />
                        <input hidden asp-for="country.FlagImage" />
                        <div class="border p-3 mt-4">
                            <div asp-validation-summary="All"></div>
                            <div class="mb-3">
                                <label asp-for="country.Name"></label>
                                <br />
                                <br />
                                <input asp-for="@Model.country.Name" type="text" class="w-100 form-control" />
                                <span asp-validation-for="country.Name" class="text-danger"></span>
                            </div>     
                            <br />
                            <div class="mb-3">
                                <label asp-for="country.FlagImage"></label>
                                <br />
                                <br />
                                <input type="file" id="uploadBox" name="file" class="w-100 form-control" />
                                <br />
                                <img src="@Model.country.FlagImage" class="rounded-circle" width="50px" height="50px" />
                            </div>
                            <div class="row justify-content-end">
								<div class="col-md-auto">
                                    <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>
                                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>