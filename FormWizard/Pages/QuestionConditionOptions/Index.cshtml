@page
@model FormWizard.Pages.QuestionConditionOptions.IndexModel
@{
}

<div class="container p-3">

    <div class="row pt-4">
        <div class="col-6">
            <h3 class="h3 d-inline align-middle">Question Condition Option</h3>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <nav class="nav btn-group">
                <a asp-page="/QuestionConditions/Index" asp-route-questionid="@(ViewData["QuestionId"])" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-light bg-white btn-sm">
                    <i class="bi bi-arrow-left"></i>&nbsp;
                    Back to Questions Condition
                </a>
                <a asp-page="Create" asp-route-questionconditionid="@(ViewData["QuestionConditionId"])" asp-route-questionid="@(ViewData["QuestionId"])" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-facebook btn-sm">
                    <i class="bi bi-plus-circle"></i>&nbsp;
                    Create Question Condition Option
                </a>
            </nav>
        </div>
    </div>
    <br />
    <br />
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered table-striped" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    Question Condition option
                                </th>
                                <th>
                                    Value
                                </th>
                                <th>
                                    Question For
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.questionConditionOptions)
                            {
                                <tr>
                                    <td width="30%">
                                        @obj.ConditionOptionText
                                    </td>
                                    <td width="10%">
                                        @obj.OptionValue
                                    </td>
                                    <td width="40%">
                                        @obj.QuestionCondition.QuestionText
                                    </td>
                                    <td width="20%">
                                        <div>
                                            <nav class="nav btn-group">
                                                <a asp-page="Edit" asp-route-questionconditionoptionid="@obj.Id"
                                                asp-route-questionid="@(ViewData["QuestionId"])"
                                                   asp-route-myformid="@(ViewData["MyFormId"])"
                                                class="btn btn-primary btn-sm">
                                                    <i class="bi bi-pencil-square style=" font-size: 0.8rem; color: white;""></i>
                                                    Edit
                                                </a>
                                                <a asp-page="Delete" asp-route-questionconditionoptionid="@obj.Id" asp-route-questionconditionid="@obj.QuestionConditionId" asp-route-myformid="@(ViewData["MyFormId"])" class="btn btn-danger btn-sm">
                                                    <i class="bi bi-trash-fill style=" font-size: 0.8rem; color: white;""></i>
                                                    Delete
                                                </a>

@*                                            @if (obj.Type == FormWizard.Model.Question.QuestionType.radio)
                                            {
                                            <a asp-page="/QuestionOptions/Index" asp-route-id="@obj.Id" asp-route-type="@obj.Type" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil-square style="font-size: 0.8rem; color: white;""></i>
                                            Options
                                            </a>
                                            }*@
                                            </nav>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>