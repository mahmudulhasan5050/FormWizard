@page
@model FormWizard.Pages.Categories.EditModel
@{
}

<div class="container-fluid p-0">
	<br/>
	<br/>
	<h3 class="h3 d-inline align-middle">Edit Category</h3>
	<br/>
	<br/>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <input hidden asp-for="category.Id" />
                        <div class="border p-3 mt-4">
                            <div asp-validation-summary="All"></div>
                            <div class="mb-3">
                                <label asp-for="category.Name"></label>
                                <input asp-for="@Model.category.Name" type="text" class="w-100 form-control" />
                                <span asp-validation-for="category.Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="category.CreatedAt" class="form-control" hidden />
                            </div>
                            <div class="row justify-content-end">
								<div class="col-md-auto">
                                    <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>
                                    <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>