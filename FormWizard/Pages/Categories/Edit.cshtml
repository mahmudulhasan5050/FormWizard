@page
@model FormWizard.Pages.Categories.EditModel
@{
}

<div class="container-xxl py-5">

    <form method="post">
        <input hidden asp-for="category.Id" />

        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Edit Category</h2>
                <hr />
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="category.Name"></label>
                <input asp-for="@Model.category.Name" type="text" class="form-control" />
                <span asp-validation-for="category.Name" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Edit</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

        </div>

    </form>
</div>