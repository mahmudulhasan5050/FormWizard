@page
@model FormWizard.Pages.Categories.IndexModel
@{
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h3 class="h3 d-inline align-middle"> Categories</h3>
        </div>
        <div class="col-6 d-flex justify-content-end">
            <a asp-page="create" class="btn btn-facebook btn-sm"> 
                <i class="bi bi-plus-circle"></i>&nbsp;
                Add Category
            </a>
        </div>
    </div>
    <br /> 
					<div class="row">
						<div class="col-12">
							<div class="card">
								<div class="card-body">
                                    <table class="table table-bordered table-striped" style="width:100%" >
                                        <thead>
                                            <tr>
                                                <th>
                                                    Name
                                                </th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach(var obj in Model.Categories)
                                            {
                                                <tr>
                                                    <td width="75%">
                                                        @obj.Name
                                                    </td>
                                                    <td>
                                                        <div>
                                                            <nav class="nav btn-group">
                                                                <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary btn-sm">
                                                                    <i class="bi bi-pencil-square"  style="font-size: 0.8rem; color: white;"></i>
                                                                    Edit
                                                                </a>
                                                                &nbsp &nbsp &nbsp
                                                                <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm">
                                                                    <i class="bi bi-trash-fill"  style="font-size: 0.8rem; color: white;"></i>
                                                                    Delete
                                                                </a>
                                                            </nav>
                                                        </div>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
								</div>
							</div>
						</div>
					</div>


</div>