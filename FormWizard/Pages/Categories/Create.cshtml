@page
@model FormWizard.Pages.Categories.CreateModel
@{
}


<div class="container-xxl py-5">
    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Create Category</h2>
                <hr />
            </div>

            <div class="mb-3">
                <label asp-for="category.Name"></label>
                <input asp-for="@Model.category.Name" type="text" class="form-control" />
                <span asp-validation-for="category.Name" class="text-danger"></span>
            </div>      
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

        </div>

    </form>
</div>