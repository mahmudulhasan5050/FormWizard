@page
@model FormWizard.Pages.Categories.CreateModel
@{
}


<div class="container-fluid p-0">
	<br/>
	<br/>
	<h3 class="h3 d-inline align-middle">New Category</h3>
	<br/>
	<br/>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <form method="post">
                        <div class="border p-3 mt-4">
                                     <div class="mb-3">
                                        <label asp-for="category.Name"></label>
                                        <br />
                                        <br />
                                        <input asp-for="@Model.category.Name" type="text" class="w-100 form-control" />
                                        <span asp-validation-for="category.Name" class="text-danger"></span>
                                    </div> 
                                    <div class="row justify-content-end">
										<div class="col-md-auto">
                                            <a asp-page="Index" class="btn btn-light bg-white btn-sm">Back</a>    
                                             &nbsp
                                            <button type="submit" class="btn btn-primary btn-sm">Add</button>
                                        </div>
                                    </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>