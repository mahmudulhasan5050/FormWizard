@page
@using FormWizard.Model;
@model FormWizard.Pages.QuestionView.IndexModel
@{
}

<div class="container-xxl py-5">

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary pl-3">Form View</h2>
                <hr />
            </div>
            @foreach (var obj in Model.questions)
            {
                //Question Type "Text"
                if (obj.Type == FormWizard.Model.Question.QuestionType.text)
                {
                    <div class="mb-3">
                        <label>@obj.QuestionText</label>
                        <input type="@obj.Type" class="form-control" />
                         <span asp-validation-for="@obj.QuestionText" class="text-danger"></span>
                    </div>
                }
                //Question type "Radio"
                @if (obj.Type == FormWizard.Model.Question.QuestionType.radio)
                {
                    <div class="mb-3">
                        <p>@obj.QuestionText</p>
                        @foreach (var option in ViewData["questionOptions"] as IEnumerable<QuestionOption>)
                        {
                            if (option.QuestionId == obj.Id)
                            {
                                <div class="form-check">
                                    <label class="form-check-label">@option.OptionText</label>
                                    <input class="form-check-input" type="@option.OptionType" value="@option.OptionValue" name="@option.OptionType" />
                                </div>
                            }
                        }

                    <span asp-validation-for="@obj.QuestionText" class="text-danger"></span>
                    </div>
                }
                //Question type "Checkbox"
                @if (obj.Type == FormWizard.Model.Question.QuestionType.checkbox)
                {
                    <div class="mb-3">
                        <p>@obj.QuestionText</p>
                        @foreach (var option in ViewData["questionOptions"] as IEnumerable<QuestionOption>)
                        {
                            if (option.QuestionId == obj.Id)
                            {
                                <div class="form-check">
                                    <label class="form-check-label">@option.OptionText</label>
                                    <input class="form-check-input" type="@option.OptionType" value="@option.OptionValue" name="@option.OptionType" />
                                </div>
                            }
                        }

                        <span asp-validation-for="@obj.QuestionText" class="text-danger"></span>
                    </div>
                }
            }
            <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
            <a asp-page="Index" class="btn btn-secondary" style="width:150px">Back to List</a>

        </div>

    </form>

</div>