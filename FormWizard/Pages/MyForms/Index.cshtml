@page
@model FormWizard.Pages.MyForms.IndexModel
@{
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary"> Forms</h2>
        </div>
        <div class="col-6">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Create New Form
            </a>
        </div>
    </div>
    <br /> <br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                  Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Country
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.myForm)
            {
                <tr>
                    <td width="30%">
                        @obj.Name
                    </td>
                    <td width="30%">
                        @obj.Category.Name
                    </td>
                    <td width="20%">
                        <img src="@obj.Country.FlagImage" alt="food pic" width="70px" height="50px" />
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-myformid="@obj.Id" class="btn btn-primary" mx-2>
                                <i class="bi bi-pencil-square"></i>
                                Edit
                            </a>
                            <a asp-page="Delete" asp-route-myformid="@obj.Id" class="btn btn-danger" mx-2>
                                <i class="bi bi-trash-fill"></i>
                                Delete
                            </a>
                            <a asp-page="/Questions/Index" asp-route-myformid="@obj.Id" class="btn btn-primary" mx-2>
                                <i class="bi bi-pencil-square"></i>
                                Questions
                            </a>
                            <a asp-page="/QuestionView/Index" asp-route-myformid="@obj.Id" class="btn btn-primary" mx-2>
                                <i class="bi bi-pencil-square"></i>
                                View Questions
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>